<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="review">
	<select id="selectAllReview" resultType="rv">
		select
			review_no as reviewNo,
			review_writer as reviewWriter,
			review_title as reviewTitle,
			review_content as reviewContent,
			rating as rating,
			review_date as reviewDate,
			product_category as productCategory,
			product_no as productNo
		from review order by 1 desc	
	</select>
	
	<select id="selectReviewNo" resultType="_int">
		select max(review_no) from review
	</select>
	
	<insert id="insertReview" parameterType="rv">
		insert into review values
			(review_seq.nextval,
			#{reviewWriter},
			#{reviewTitle},
			#{reviewContent},
			#{rating},
			to_char(sysdate,'yyyy-mm-dd'),
			#{productCategory},
			#{productNo})
	</insert>
	
	<insert id="insertFile" parameterType="rf">
		insert into rfile_tbl values(file_seq.nextval,#{reviewNo},#{filename},#{filepath})	
	</insert>
